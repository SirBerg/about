---
import Button from './Button.astro';
---
<div class="nav">
    <h1 class="h1special" ><a href="/">boerg.co</a></h1>
    <nav>
        <Button href="/" content="Home"></Button>
        <Button href="/privacy" content="Privacy"></Button>
        <Button href="/words" content="Stats"></Button>
        <Button href="https://garden.boerg.co" content="Garden"></Button>
    </nav>
</div>
<style>
    .nav{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: -20px;
        margin-bottom: -20px;
        padding: 10px 20px;
        color: white;
    }
    .h1special{
        background-color: #f3ec78;
        background-image: linear-gradient(45deg, #f44369, #3e3b92);
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent;
        -moz-text-fill-color: transparent;
        cursor: pointer;
    }
</style>
